<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:test</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="hibernate_project.entity.Student"></mapping>
        <mapping class="hibernate_project.entity.City"></mapping>
        <mapping class="hibernate_project.entity.Country"></mapping>
        <mapping class="hibernate_project.entity.Region"></mapping>
    </session-factory>

</hibernate-configuration>